<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FirstActivity">




    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagertwofirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" >

        <ImageView
            android:id="@+id/imageviewtwofirst"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/a4" />

        <ImageView
            android:id="@+id/imageviewtwofirst2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/a4" />

        <ImageView
            android:id="@+id/imageviewtwofirst3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/a4" />

        <ImageView
            android:id="@+id/imageviewtwofirst4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/a4" />
    </LinearLayout>


</RelativeLayout>
